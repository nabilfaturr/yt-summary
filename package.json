{
  "name": "reclara",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "bun@1.3.0",
  "scripts": {
    "add:web": "bun add --cwd apps/web",
    "add:worker": "bun add --cwd apps/worker",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=web",
    "dev:worker": "turbo run dev --filter=worker",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "db:generate": "bunx drizzle-kit generate --config=packages/db/drizzle.config.ts",
    "db:migrate": "bunx drizzle-kit migrate --config=packages/db/drizzle.config.ts",
    "db:push": "bunx drizzle-kit push --config=packages/db/drizzle.config.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9",
    "eslint-config-next": "16.0.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "turbo": "^2.5.8"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7"
  }
}
